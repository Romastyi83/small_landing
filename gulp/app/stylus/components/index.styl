*
  margin 0
  padding 0
  box-sizing border-box
  line-height 1
  font-family 'Fira Sans', sans-serif
  &:before
    box-sizing border-box
h1, h2, h3, h4, h5, h6
  margin 0
.container
  max-width 480px
  margin 0 auto
  min-height 100vh
  display flex
  flex-direction column
  overflow hidden
.header
  position relative
  height 97.58px
  background-color #101010
  background-image url(../images/top-img.png)
  background-position center
  background-repeat no-repeat
  background-size 100% 100%
  padding-top 25px
  padding-bottom 14px
  display flex
  flex-direction column
  justify-content flex-end
  +element(top)
    width 100%
    position absolute
    top 0
    left 0
    height 25px
    display flex
    justify-content space-between
    align-items center
    background-color #fff
    padding 0 15px
  +element(text)
    font-weight 800
    font-size 12px
  +element(right)
    font-weight 700
    font-size 12px
    color #FE0000
.main
  display flex
  flex-direction column
  justify-content center
  align-items center
  flex-grow 1
  padding-top 13px
  background-color #101010
  background-image url(../images/bg.png)
  background-position left center
  background-repeat no-repeat
  background-size auto 100%
.btns
  width 100%
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin-bottom 20px
.btn
  height 100px
  width 90%
  line-height 61px
  background-image linear-gradient(180deg, #2F9EDD 0%, #0078BC 100%)
  border-radius 30.5319px
  font-family 'Fira Sans', sans-serif
  font-weight 800
  font-size 24px
  color #fff
  text-decoration none
  display flex
  justify-content center
  align-items center
  padding 0 20px 0 12px
  margin-bottom 5px
  +element(play)
    margin-right 12px
  +element(desc)
    font-weight 400
    font-size 10px
    line-height 9px
    color #818181
  +element(group)
    width 100%
    display flex
    flex-direction column
    align-items center
    & + &
      margin-top 20px
  +element(right)
    font-size 13px
    font-weight 700
  @media screen and (max-height: 700px)
    height 61px
    font-size 22px
  +element(sep)
    height 65%
    width 1px
    background-color #fff
    margin-right 12px
    margin-left auto
.bonus
  display flex
  +element(header)
    font-weight 900
    font-size 24px
    letter-spacing -1.5px
    color #FFE602
    white-space nowrap
    margin 0 9px 0 15px
  +element(text)
    font-weight 900
    font-size 13px
    color #fff
    letter-spacing -0.03em
    margin-right 9px
    span
      display block
      font-weight 400
      font-size 10px
      margin-top 10px
    @media screen and (max-height: 700px)
      font-weight 700
      font-size 12px
.player
  display flex
  justify-content space-between
  align-items center
  padding 0 15px
  color #fff
  +element(header)
    font-weight 700
    font-size 15px
  +element(desc)
    font-size 10px
  +element(btns)
    display flex
    align-items center
    gap 14px
    @media screen and (max-height: 700px)
      gap 10px
  +element(btn)
    cursor pointer
  +element(left)
    display flex
    align-items center
.footer
  background-color #101010
  +element(text)
    font-size 10px
    line-height 9px
    color #757575
    text-align center
    padding 8px
    background #292929
    border-radius 9px
    margin 0 15px 13px
  +element(link)
    color #757575
.top-text
  font-weight 900
  font-size 14px
  color #fff
  margin-bottom 18px